{
  "icon": "./assets/icon.svg",
  "name": "AdvancedTable",
  "hint": "Display numerical information as a table with bar charts",
  "options": {
    "aggregation": true,
    "individualFilter": true,
    "aggregateFilter": true
  },
  "settings": [
    {
      "name": {
        "key": "Table Appearance"
      },
      "settings": [
        {
          "name": {
            "key": "Table Border Radius"
          },
          "key": "tableBorderRadius",
          "type": "number",
          "hint": "Select the border radius for the table (px)",
          "default": 0
        },
        {
          "name": {
            "key": "Table Border Color"
          },
          "key": "tableBorderColor",
          "type": "color",
          "hint": "Select the border color for the table"
        },
        {
          "name": {
            "key": "Table Border Thickness"
          },
          "key": "tableBorderWidth",
          "type": "number",
          "hint": "Select the border thickness for the table (px)",
          "default": 2
        },
        {
          "name": {
            "key": "Alternating Row Colors"
          },
          "key": "alternatingRowColors",
          "type": "boolean",
          "hint": "Toggle alternating row colors",
          "default": false
        },
        {
          "name": {
            "key": "Show Row Numbers"
          },
          "key": "showRowNumbers",
          "type": "boolean",
          "hint": "Toggle the visibility of row numbers",
          "default": false
        }
      ]
    },
    {
      "name": {
        "key": "Chart Settings"
      },
      "settings": [
        {
          "name": {
            "key": "Bar Rounding"
          },
          "key": "barRounding",
          "type": "number",
          "hint": "Select the rounding radius for the bar (px)",
          "default": 1
        },
        {
          "name": {
            "key": "Positive Bar Color"
          },
          "key": "positiveBarColor",
          "type": "color",
          "hint": "Select the color for positive bar values",
          "default": "#00FF00"
        },
        {
          "name": {
            "key": "Negative Bar Color"
          },
          "key": "negativeBarColor",
          "type": "color",
          "hint": "Select the color for negative bar values",
          "default": "#FF0000"
        },
        {
          "name": {
            "key": "Sparkline Color"
          },
          "key": "sparklineColor",
          "type": "color",
          "hint": "Select the color for sparklines",
          "default": "blue"
        },
        {
          "name": {
            "key": "Show Bar Charts"
          },
          "key": "showBarCharts",
          "type": "boolean",
          "hint": "Toggle the visibility of bar charts",
          "default": false
        },
        {
          "name": {
            "key": "Show Line Charts"
          },
          "key": "showLineCharts",
          "type": "boolean",
          "hint": "Toggle the visibility of line charts",
          "default": false
        }
      ]
    },
    {
      "name": {
        "key": "Column Settings"
      },
      "settings": [
        {
          "name": {
            "key": "Show Value Columns"
          },
          "key": "showValueColumns",
          "type": "boolean",
          "hint": "Toggle the visibility of value columns",
          "default": true
        }
      ]
    }
  ],
  "bindingsTrays": [
    {
      "key": "tray-key-dim-1",
      "name": {
        "key": "BreakBy (First Value)"
      },
      "queryRole": "row",
      "minCount": 1,
      "maxCount": 1
    },
    {
      "key": "tray-key-dim-2",
      "name": {
        "key": "BreakBy (Time)"
      },
      "queryRole": "row",
      "minCount": 1,
      "maxCount": 1
    },
    {
      "key": "tray-key",
      "name": {
        "key": "Measures"
      },
      "queryRole": "measure",
      "settings": [
        {
          "name": {
            "key": "Number Format"
          },
          "settings": [
            {
              "name": {
                "key": "Scale"
              },
              "key": "scale1",
              "type": "scale"
            },
            {
              "name": {
                "key": "Format"
              },
              "key": "format",
              "type": "number-format",
              "defaultValue": "###,###"
            },
            {
              "name": {
                "key": "Color"
              },
              "key": "color",
              "type": "color"
            },
            {
              "name": {
                "key": "Transparency"
              },
              "key": "transparency",
              "type": "number",
              "defaultValue": 70
            }
          ]
        },
        {
          "name": {
            "key": "Conditional Formatting"
          },
          "settings": [
            {
              "name": "Conditions",
              "key": "conditions",
              "type": "conditional-formatting",
              "uiControlOptions": {
                "labels": {
                  "backgroundColor": "Text color"
                }
              }
            }
          ]
        }
      ],
      "minCount": 1,
      "maxCount": 5
    }
  ]
}
